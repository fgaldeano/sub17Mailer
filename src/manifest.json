{
    "browser_action": {
        "default_popup": "settings/index.html",
        "default_title": "__MSG_popupTitle__"
    },
    "content_scripts": [
        {
            "css": [
                "styles/youth.css"
            ],
            "js": [
                "scripts/youthplayer.js"
            ],
            "matches": [
                "http://*.hattrick.org/Club/Players/YouthPlayer.aspx*",
                "https://*.hattrick.org/Club/Players/YouthPlayer.aspx*"
            ]
        },
        {
        	"css": [
                "styles/youth.css"
            ],
            "js": [
                "scripts/youthmail.js"
            ],
            "matches": [
                "http://*.hattrick.org/MyHattrick/Inbox/*newMail*",
                "https://*.hattrick.org/MyHattrick/Inbox/*newMail*"
            ]
        }
    ],
    "default_locale": "es",
    "description": "__MSG_appDescription__",
    "icons": { 
    	"16": "resources/icon16.png",
    	"32": "resources/icon32.png",
		"48": "resources/icon48.png",
		"64": "resources/icon64.png",
		"128": "resources/icon128.png" 
    },
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "permissions": [
    	"activeTab", 
    	"storage",
        "https://drive.google.com/*"
    ],
    "version": "1.0.2",
    "web_accessible_resources" : [
    	"resources/*.jpg",
    	"resources/*.png",
    	"templates/*.txt"
    ]
}